<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layout.header.hello"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.title"), root_path %></li>
        <li><%= link_to t("static_pages.help.title"), help_path %></li>
        <% if logged_in? %>
        <li><%= link_to t("session.user"), "#"%></li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t ("drop.account") %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("drop.profile"), current_user %></li>
              <li><%= link_to t("drop.setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("session.des3"), logout_path, method: :delete %>
              </li>
            </ul>
        </li>
        <% else %>
          <li><%= link_to t("session.des1"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
