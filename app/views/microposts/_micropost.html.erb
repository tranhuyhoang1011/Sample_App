<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.micropost.user), micropost.user %>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "micropost.posted" %> <%= time_ago_in_words(micropost.created_at) %> <%= t "micropost.ago" %>
    <% if current_user?(micropost.user) %>
      <%= link_to t("user.delete"), micropost, method: :delete,
      data: {confirm: t("user.you_sure")} %>
    <% end %>
  </span>
</li>
