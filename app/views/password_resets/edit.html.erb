<% provide(:title, t("password.reset_pass")) %>
<h1><%= t("password.reset_pass")%></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: password_reset_path(params[:id]) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label t("user.pass") %>
      <%= f.password_field t("user.pass"), class: "form-control" %>

      <%= f.label t("user.pass_conf"), "Confirmation" %>
      <%= f.password_field ("user.pass_conf"), class: "form-control" %>

      <%= f.submit t("password.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
