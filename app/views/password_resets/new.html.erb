<% provide(:title, t("password.title")) %>
<h1><%= t("password.title") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :password_reset, url: password_resets_path do |f| %>
      <%= f.label t "user.email" %>
      <%= f.email_field t ("user.email"), class: "form-control" %>

      <%= f.submit t("password.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
